.switch
  position relative
  display inline-block
  width 100%
  padding-right 60px
  &:focus
    outline none

.switch:focus .slider
    box-shadow 0 0 0 2pt var(--highlight)

.switch input
  opacity 0
  width 0
  height 0

.slider {
  position absolute
  cursor pointer
  top 0
  left calc(100% - 60px)
  right 0
  bottom calc(100% - 34px)
  background-color var(--darkSteel)
  transition .4s
  border 2px solid white
}

.slider:before {
  position absolute
  content ""
  height 22px
  width 22px
  left 4px
  bottom 4px
  background-color var(--white)
  transition .4s
}

input:checked + .slider {
  background-color var(--active)
}


input:checked + .slider:before {
  transform translateX(26px)
}

.slider.round {
  border-radius 34px
}

.slider.round:before {
  border-radius 50%
}