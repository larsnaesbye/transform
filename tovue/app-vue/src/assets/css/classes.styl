  line-height 1.125rem

.paragraph_micro
  font-size 0.75rem
  line-height 1rem
  padding-top: 0rem
  padding-bottom 0rem
  margin-top 0
  margin-bottom 0

.white-text
  color var(--white) !important

.black-text
  color var(--black) !important

/* ELEMENTs  */

.box__large
  margin 0
  padding 0
  border-radius 8px
  overflow hidden
  box-sizing content-box
  border 1px solid var(--darkSteel)
  background-color var(--white)
  &:focus
    outline none
    border: 4px solid var(--highlight);

.box__small {
  margin: 0;
  padding: 0;
  border-radius: 8px;
  overflow: hidden;
  box-sizing: content-box;
  border: 2px solid var(--darkSteel);
  background-color: var(--white);
}

.buttonmaster
  height 2rem
  padding 0
  box-sizing content-box
  display inline-flex
  justify-content center
  align-items center
  border 1px solid var(--darkSteel)
  border-radius 17px
  font-size 0.75rem
  line-height 0.9rem
  font-weight 400
  text-transform uppercase
  transition all 200ms ease-in-out
  &:hover
    background-color var(--lightSteel)
  &:focus
    outline none
    border 1px solid rgba(0,0,0,0)
    box-shadow: 0 0 0 2pt var(--highlight);

.buttonmaster > span
  margin 0 .5rem
  &:first-child
    margin-left 1rem
  &:last-child
    margin-right 1rem

.buttonmaster.sm
  height 20px
  border-radius 50%

.buttonmaster.no-border
  border 1px solid rgba(0,0,0,0)

.buttonmaster.no-select:focus
  outline none !important
  border 1px solid rgba(0,0,0,0)
  box-shadow none !important

.buttonmaster.primary
  border 1px solid var(--primary)
  background-color var(--primary)
  color var(--white)
  &:hover
    background-color: var(--action)

