:root, html
  height 100%
  box-sizing border-box
  font-size 16px !important
  scroll-behavior smooth

body
  font-family Roboto, sans-serif
  color var(--black)
  font-size 0.938rem
  line-height 1.25rem
  font-weight 300
  background-color var(--white)
  min-height 100% !important
  height 100%

h1
  margin-top 0
  margin-bottom 0.8rem
  color var(--black)
  font-size 2.625rem
  line-height 2.813rem
  font-weight 300
  letter-spacing 0.02rem

h2
  margin-top 0
  margin-bottom 0.6rem
  color var(--black)
  font-size 1.375rem
  line-height 1.625rem
  font-weight 300
  letter-spacing 0.02rem

h3
  margin-top 0
  margin-bottom 0.6rem
  color var(--dark)
  font-size 1.188rem
  line-height 1.375rem
  font-weight 400
  letter-spacing 0.04rem

h4
  margin-top 0
  margin-bottom 0.4em
  font-size 1rem
  line-height 1.188rem
  font-weight 500
  letter-spacing 0.04rem

h5
  margin-top 2px
  margin-bottom 0.3rem
  color var(--dark)
  font-size 0.75rem
  line-height 0.875rem
  font-weight 700
  letter-spacing 0.06rem
  text-transform uppercase

h6
  margin-top 0.2rem
  margin-bottom 0.3rem
  font-size 0.75rem
  line-height 0.875rem
  font-weight 500
  letter-spacing 0.06rem
  text-transform uppercase

h7
  font-size 0.625rem //10px
  line-height 0.875rem
  font-weight 500
  letter-spacing 0.06rem
  text-transform uppercase

p
  margin-bottom 1rem
  color var(--black)
  font-size 0.938rem
  line-height 1.25rem

a
  display inline
  color var(--linkColor)
  text-decoration none

a:hover
  text-decoration none

form
  color var(--white)

.tooltip
  z-index 1000

.tooltip.info
  // outline none

.tooltip .wrapper
  margin-bottom -10px
  padding-bottom 10px

.tooltip-inner
  color white
  padding 1rem
  max-width 250px
  box-sizing border-box
  filter drop-shadow(0 4px 4px var(--lightGrey))
  border-radius 1rem
  background var(--tooltipColor)

.tooltip-arrow {
    width 0
    height 0
    border-style solid
    position absolute
    margin 5px
    border-color var(--tooltipColor)
    z-index 1
  }
  &[x-placement^="top"] {
    margin-bottom: 5px;
    .tooltip-arrow {
      border-width: 5px 5px 0 5px;
      border-left-color: transparent !important;
      border-right-color: transparent !important;
      border-bottom-color: transparent !important;
      bottom: -5px;
      left: calc(50% - 5px);
      margin-top: 0;
      margin-bottom: 0;
    }
  }
  &[x-placement^="bottom"] {
    margin-top: 5px;
    .tooltip-arrow {
      border-width: 0 5px 5px 5px;
      border-left-color: transparent !important;
      border-right-color: transparent !important;
      border-top-color: transparent !important;
      top: -5px;
      left: calc(50% - 5px);
      margin-top: 0;
      margin-bottom: 0;
    }
  }
  &[x-placement^="right"] {
    margin-left: 5px;
    .tooltip-arrow {
      border-width: 5px 5px 5px 0;
      border-left-color: transparent !important;
      border-top-color: transparent !important;
      border-bottom-color: transparent !important;
      left: -5px;
      top: calc(50% - 5px);
      margin-left: 0;
      margin-right: 0;
    }
  }
  &[x-placement^="left"] {
    margin-right: 5px;
    .tooltip-arrow {
      border-width: 5px 0 5px 5px;
      border-top-color: transparent !important;
      border-right-color: transparent !important;
      border-bottom-color: transparent !important;
      right: -5px;
      top: calc(50% - 5px);
      margin-left: 0;
      margin-right: 0;
    }
  }
